<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/user"
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:src="@drawable/usericon"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="28dp"
            android:src="@drawable/ic_sharp_more_vert_24" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Playlists"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="196dp">

        <ImageView
            android:id="@+id/album1"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-10dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/album" />

        <ImageView
            android:id="@+id/album2"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="133dp"
            android:layout_marginBottom="49dp"
            android:src="@drawable/album" />

        <ImageView
            android:id="@+id/album3"
            android:layout_width="124dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="49dp"
            android:src="@drawable/album" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="310dp"
            android:layout_marginBottom="17dp"
            android:text="Playlist1"
            android:textColor="#d5b300"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="170dp"
            android:layout_marginBottom="17dp"
            android:text="Playlist2"
            android:textColor="#d5b300"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="17dp"
            android:text="Playlist3"
            android:textColor="#d5b300"
            android:textSize="12dp"
            android:textStyle="bold" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Artists"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="196dp">
        <ImageView
            android:id="@+id/artist1"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-10dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/artist" />
        <ImageView
            android:id="@+id/artist2"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="133dp"
            android:layout_marginBottom="49dp"
            android:src="@drawable/artist" />

        <ImageView
            android:id="@+id/artist3"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-9dp"
            android:layout_marginBottom="49dp"
            android:src="@drawable/artist" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="310dp"
            android:layout_marginBottom="17dp"
            android:text="Artist1"
            android:textColor="#d5b300"
            android:textSize="12dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="84dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="170dp"
            android:layout_marginBottom="17dp"
            android:text="Artist2"
            android:textColor="#d5b300"
            android:textSize="12dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="84dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="17dp"
            android:text="Artist3"
            android:textColor="#d5b300"
            android:textSize="12dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/halfroundclr"/>

        <ImageView
            android:layout_width="400dp"
            android:layout_height="94dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/halfround" />

        <TextView
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="134dp"
            android:layout_marginBottom="29dp"
            android:text="Song Name"
            android:textColor="#d5b300"
            android:textSize="25dp" />

        <ImageView
            android:id="@+id/play"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="28dp"
            android:src="@drawable/ic_baseline_play_arrow_24" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="57dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="28dp"
            android:src="@drawable/fastforward" />

        <ImageView
            android:id="@+id/forward"
            android:layout_width="44dp"
            android:layout_height="37dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="109dp"
            android:layout_marginBottom="28dp"
            android:src="@drawable/backward" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:background="#2a2831">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="329dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/like" />

        <ImageView
            android:layout_width="62dp"
            android:layout_height="51dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="218dp"
            android:layout_marginBottom="33dp"
            android:src="@drawable/add" />

        <ImageView
            android:layout_width="67dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="33dp"
            android:src="@drawable/later" />

        <ImageView
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/search1" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="273dp"
            android:layout_marginBottom="7dp"
            android:text="Like"
            android:textColor="#FFF"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="179dp"
            android:layout_marginBottom="7dp"
            android:text="Add"
            android:textColor="#FFF"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="8dp"
            android:text="Search"
            android:textColor="#FFF"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:text="Listen Later"
            android:textColor="#FFF"
            android:textSize="12dp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>