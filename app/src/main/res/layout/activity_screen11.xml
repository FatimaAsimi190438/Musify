<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="28dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="243dp"
            android:layout_height="53dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="117dp"
            android:layout_marginBottom="23dp"
            android:text="Record Music"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="32dp"
            android:text="Next"
            android:textColor="#d5b300"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="290dp"
            android:layout_height="193dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="57dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/despacito" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="430dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="143dp"
            android:layout_marginBottom="370dp"
            android:text="0:00 / 2:45 "
            android:textColor="#d5b300"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="121dp"
            android:layout_height="94dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="192dp"
            android:layout_marginBottom="271dp"
            android:src="@drawable/ic_outline_circle_24" />
        <ImageView
            android:layout_width="51dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="228dp"
            android:layout_marginBottom="294dp"
            android:src="@drawable/ic_baseline_circle_24" />

        <ImageView
            android:layout_width="91dp"
            android:layout_height="114dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="94dp"
            android:layout_marginBottom="257dp"
            android:src="@drawable/ic_baseline_play_arrow_24" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:background="#2a2831">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="329dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/like" />

        <ImageView
            android:layout_width="62dp"
            android:layout_height="51dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="218dp"
            android:layout_marginBottom="33dp"
            android:src="@drawable/add" />

        <ImageView
            android:layout_width="67dp"
            android:layout_height="56dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="33dp"
            android:src="@drawable/later" />

        <ImageView
            android:layout_width="101dp"
            android:layout_height="101dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/search1" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="273dp"
            android:layout_marginBottom="7dp"
            android:text="Like"
            android:textColor="#FFF"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="179dp"
            android:layout_marginBottom="7dp"
            android:text="Add"
            android:textColor="#FFF"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="8dp"
            android:text="Search"
            android:textColor="#FFF"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="84dp"
            android:layout_height="29dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:text="Listen Later"
            android:textColor="#FFF"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textAlignment="center"/>
    </RelativeLayout>
</LinearLayout>